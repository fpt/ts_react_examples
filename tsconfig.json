{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./src",
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "plugins": [{ "name": "typescript-styled-plugin" }],
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
    "typeRoots" : ["./typings"],
    "types": ["jest"]
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  "types": [
    "typePatches"
  ]
}
